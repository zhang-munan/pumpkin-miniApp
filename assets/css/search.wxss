.search_box {
  height: 100%;
}
.search_box .search_box_title {
  width: calc(100% - 40px);
  padding: 10px 20px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  background: #fff;
}
.search_box .search_box_title .search_box_title_search {
  flex: 1;
  font-size: 12px;
  background-color: var(--bg-page);
  display: flex;
  align-items: center;
  border-radius: 100px;
  height: 100%;
}
.search_box_title_search_icon{
  margin: 0px 5px ;
  padding-left: 5px;
}
.search_box .search_box_title .search_box_title_search .search_box_title_search_text {
  height: 100%;
  padding: 0px 5px;
  font-size: 12px;
  width: 100%;
}

.search_box .search_box_title .search_box_title_no {
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 50px;
  height: 100%;
  font-size: 12px;
  color: var(--font-ha);
  border-radius: 100px;
  background-color: var(--bg-page);
  margin-left: 10px;
}

.search_box_searchResult{
  width: 100%;
  padding: 10px 0px;
  margin-top: 40px;
}
.search_box_searchResult_li{
  width: calc(100% - 40px);
  padding: 0px 20px;
  height: 30px;
  font-size: 12px;
  color: var(--font-hb);
  line-height: 30px;
  border-bottom: 1px solid var(--border-bd);
}
.search_box_searchResult_li:last-child{
  border: 0;
}
.search_box_searchResult_close{
  width: 50px;
  height: 50px;
  border-radius: 100px 100px 0 0;
  text-align: center;
  line-height: 35px;
  background: var(--border-bc);
  color: var(--font-hc);
  font-size: 14px;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
}
.search_box .search_box_searchHistory {
}

.search_box .search_box_searchHistory .search_box_searchHistory_title {
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.search_box .search_box_searchHistory .search_box_searchHistory_title .search_box_searchHistory_title_font{
  align-items: center;
  font-size: 12px;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  width: 50px;
  height: 25px;
  color: var(--font-hc);
}

.search_box .search_box_searchHistory .search_box_searchHistory_text {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  margin-top: 10px;
}
.search_box .search_box_searchHistory .search_box_searchHistory_text .search_box_searchHistory_text_part{
  background-color: #fff;
  color: var(--font-ha);
  border-radius: 5px;
  font-size: 12px;
  margin: 0 5px 5px 0;
  padding: 2px 5px;
}
.search_box_searchHistory_text_part:first-child {
  margin-left: 0px !important;
}

/*历史记录 隐藏-显示样式*/
.search_box .search_box_searchHistory{
  width: calc(100% - 40px);
  padding: 0 20px;
  margin-top: 60px;
}
.search_box .search_box_searchHistory .search_box_searchHistory_List{
  font-size: 13px;
  height: 30px;
  line-height: 30px;
  padding: 0 5px;
  border-bottom: 1px solid var(--border-bc);
}
.search_box_title_searchHistory_hide {
  display: none !important;
}
.search_box_title_searchHistory_show {
  animation: slide 500ms;
}

